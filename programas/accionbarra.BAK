&&&& abre y cierra la barrafree
PARAMETERS ACCION
DO CASE
	CASE ACCION=1
		DO FORM BARRAFREE&& ABRE EL FORMULARIO AL INICIAR LA ACCION
	CASE ACCION=2
		IF WEXIST('BARRAFREE')
			RELEASE WINDOWS BARRAFREE && CIERRA EL FORMULARIO AL TERMINAR LA ACCION
		ELSE
			WAIT WINDOW "NO EXITES " NOWAIT
		ENDIF
ENDCASE
